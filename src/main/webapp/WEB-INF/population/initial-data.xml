<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
>

	<import resource="classpath:/WEB-INF/population/conversion-service.xml"/>
	
	<!-- Anonymous user -->

	<bean name="anonymousUserAccount" class="acme.framework.entities.UserAccount">
		<property name="username" value="anonymous" />
		<property name="password" value="anonymous" />
		<property name="enabled" value="false" />
		<property name="identity">
			<bean class="acme.datatypes.UserIdentity">
				<property name="name" value="John" />
				<property name="surname" value="Doe" />
				<property name="email" value="john.doe@acme.com" />
			</bean>
		</property>
		<property name="roles">
			<list>
				<ref bean="anonymousAnonymous" />
			</list>
		</property>
	</bean>

	<bean name="anonymousAnonymous" class="acme.framework.entities.Anonymous">
		<property name="userAccount" ref="anonymousUserAccount" />
	</bean>
	
	<!-- Administrators -->
	
	<bean name="administratorUserAccount" class="acme.framework.entities.UserAccount">
		<property name="username" value="administrator" />
		<property name="password" value="administrator" />
		<property name="enabled" value="true" />
		<property name="identity">
			<bean class="acme.datatypes.UserIdentity">
				<property name="name" value="Administrator" />
				<property name="surname" value="Acme.com" />
				<property name="email" value="administrator@acme.com" />
			</bean>
		</property>
		<property name="roles">
			<list>
				<ref bean="administratorAdministrator" />
				<ref bean="administratorAuthenticated" />
			</list>
		</property>
	</bean>

	<bean name="administratorAdministrator" class="acme.framework.entities.Administrator">
		<property name="userAccount" ref="administratorUserAccount" />
	</bean>
	
	<bean name="administratorAuthenticated" class="acme.framework.entities.Authenticated">
		<property name="userAccount" ref="administratorUserAccount" />
	</bean>
	
	<!-- Authenticated -->
	
	<bean name="authenticatedUserAccount" class="acme.framework.entities.UserAccount">
		<property name="username" value="authenticated" />
		<property name="password" value="authenticated" />
		<property name="enabled" value="true" />
		<property name="identity">
			<bean class="acme.datatypes.UserIdentity">
				<property name="name" value="Authenticated" />
				<property name="surname" value="Au" />
				<property name="email" value="authenticated@acme.com" />
			</bean>
		</property>
		<property name="roles">
			<list>
				<ref bean="administratorAuthenticated" />
			</list>
		</property>
	</bean>

	<bean name="authenticatedAuthenticated" class="acme.framework.entities.Authenticated">
		<property name="userAccount" ref="authenticatedUserAccount" />
	</bean>
	
	
	<!-- Managers -->
	
	<bean  name="managerUserAccount" class="acme.framework.entities.UserAccount">
		<property name="username" value="manager" />
		<property name="password" value="manager" />
		<property name="enabled" value="true" />
		<property name="identity">
			<bean class="acme.datatypes.UserIdentity">
				<property name="name" value="Manager" />
				<property name="surname" value="Acme.com" />
				<property name="email" value="manager@acme.com" />
			</bean>
		</property>
		<property name="roles">
			<list>
				<ref bean="managerManager" />
				<ref bean="managerAuthenticated" />
			</list>
		</property>
	</bean>
	
	<bean name="managerManager" class="acme.framework.entities.Manager">
		<property name="userAccount" ref="managerUserAccount" />
	</bean>
	
	<bean name="managerAuthenticated" class="acme.framework.entities.Authenticated">
		<property name="userAccount" ref="managerUserAccount" />
	</bean>
	
	<!-- Authenticated  -->

		<bean  name="authenticatedUserAccount" class="acme.framework.entities.UserAccount">
		<property name="username" value="authenticated1" />
		<property name="password" value="authenticated1" />
		<property name="enabled" value="true" />
		<property name="identity">
			<bean class="acme.datatypes.UserIdentity">
				<property name="name" value="Antonio" />
				<property name="surname" value="Garrido" />
				<property name="email" value="antonioGarr@gmail.com" />
			</bean>
		</property>
		<property name="roles">
			<list>
				<ref bean="authenticatedAuthenticated" />
			</list>
		</property>
	</bean>

	<bean name="authenticatedAuthenticated" class="acme.framework.entities.Authenticated">
		<property name="userAccount" ref="authenticatedUserAccount" />
	</bean>
	
	<!-- Shouts -->
	
	<bean id="shout01" class="acme.entities.shouts.Shout">
		<property name="moment" value="2021/04/20 19:39"/>
		<property name="author" value="John Doe"/>
		<property name="text" value="I'm happy!"/>
		<property name="info" value="http://www.example.org"/>		
	</bean>
	
	<!-- Tasks -->
	
	<bean id="task03" class="acme.entities.tasks.Task">
		<property name="title" value="Customize your webpage"/>
		<property name="description" value="Try some cool stuff"/>
		<property name="startExecution" value="2021/06/05 22:33"/>
		<property name="endExecution" value="2022/02/11 7:46"/>
		<property name="workload" value="98.59"/>
		<property name="info" value="http://www.example.org"/>
		<property name="userAccount"> <ref bean="administratorUserAccount"/></property>
		<property name="isPrivate" value="true"></property>
		<property name="isFinished" value="true"></property>
	</bean>
	<bean id="task04" class="acme.entities.tasks.Task">
		<property name="title" value="Customize header"/>
		<property name="description" value="Try some cool stuff"/>
		<property name="startExecution" value="2022/05/17 22:33"/>
		<property name="endExecution" value="2022/05/20 7:46"/>
		<property name="workload" value="13.59"/>
		<property name="info" value="http://www.example.org"/>
		<property name="userAccount"> <ref bean="authenticatedUserAccount"/></property>
		<property name="isPrivate" value="false"></property>
		<property name="isFinished" value="true"></property>
	</bean>
	
	<bean id="task05" class="acme.entities.tasks.Task">
		<property name="title" value="Testing"/>
		<property name="description" value="Try some cool stuff"/>
		<property name="startExecution" value="2022/02/17 22:33"/>
		<property name="endExecution" value="2022/03/20 7:46"/>
		<property name="workload" value="23.59"/>
		<property name="info" value="http://www.example.org"/>
		<property name="userAccount"> <ref bean="authenticatedUserAccount"/></property>
		<property name="isPrivate" value="false"></property>
		<property name="isFinished" value="true"></property>
	</bean>
	
	
	<!-- Spam -->
	
	<bean id="spam01" class="acme.entities.spam.Spam">
